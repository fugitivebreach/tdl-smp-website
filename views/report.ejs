<%- include('partials/header', { title: 'Player Report', activeTab: 'report' }) %>

<!-- Report Form Section -->
<section class="appeal-section">
    <div class="container">
        <div class="appeal-header">
            <div class="header-icon-wrapper">
                <div class="header-icon">
                    <i class="fas fa-flag"></i>
                </div>
            </div>
            <h1 class="page-title">ðŸš¨ Player Report</h1>
            <p class="page-subtitle">Help keep TDL SMP safe by reporting rule violations with video evidence</p>
            <div class="header-decoration"></div>
        </div>

        <div class="appeal-form-container">
            <form id="reportForm" class="appeal-form" method="POST" action="/submit-report" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="playerIdentifier">
                        <i class="fas fa-user-times"></i> Player's IGN or Discord User ID *
                    </label>
                    <input type="text" id="playerIdentifier" name="playerIdentifier" required 
                           placeholder="e.g., PlayerName123 or Discord#1234">
                </div>

                <div class="form-group">
                    <label for="videoProof">
                        <i class="fas fa-video"></i> Attach Video Proof *
                    </label>
                    <input type="file" id="videoProof" name="videoProof" accept="video/*,.mp4,.mov,.avi,.mkv" required>
                    <small class="form-help">Upload video evidence of the rule violation (Max 50MB)</small>
                </div>

                <div class="form-group">
                    <label for="reportReason">
                        <i class="fas fa-exclamation-triangle"></i> What is the report about? *
                    </label>
                    <textarea id="reportReason" name="reportReason" required rows="6" 
                              placeholder="Describe in detail what rule was broken and what happened. Include timestamps if possible."></textarea>
                </div>

                <div class="form-group">
                    <label for="additionalInfo">
                        <i class="fas fa-comment"></i> Additional Information
                    </label>
                    <textarea id="additionalInfo" name="additionalInfo" rows="4" 
                              placeholder="Any additional context or information that might be helpful..."></textarea>
                </div>

                <div class="form-group checkbox-group">
                    <label class="checkbox-label">
                        <input type="checkbox" id="truthfulReport" name="truthfulReport" required>
                        <span class="checkmark"></span>
                        <span class="checkbox-text">
                            I confirm this report is truthful and I have not falsified any evidence *
                        </span>
                    </label>
                </div>

                <div class="form-actions">
                    <button type="submit" class="btn btn-primary btn-large">
                        <i class="fas fa-flag"></i> Submit Player Report
                    </button>
                </div>
            </form>
        </div>

        <!-- Report Guidelines -->
        <div class="appeal-tips">
            <h3><i class="fas fa-lightbulb"></i> Report Guidelines</h3>
            <ul>
                <li>Video evidence is required for all reports - screenshots alone are not sufficient</li>
                <li>Be specific about what rule was broken and when it happened</li>
                <li>Include timestamps in your description to help staff review the evidence</li>
                <li>False reports may result in punishment - only report genuine rule violations</li>
                <li>Reports are typically reviewed within 24-48 hours</li>
                <li>You'll receive updates via Discord once the report is processed</li>
            </ul>
        </div>

        <!-- Community Section -->
        <div class="appeal-tips">
            <h3><i class="fab fa-discord"></i> Join Our Community</h3>
            <p>Stay connected with the TDL SMP community:</p>
            <a href="https://discord.gg/zvY6235WC9" target="_blank" class="btn btn-secondary">
                <i class="fab fa-discord"></i> Join Discord Server
            </a>
        </div>
    </div>
</section>

<!-- Success/Error Modal -->
<div id="responseModal" class="modal">
    <div class="modal-content">
        <div class="modal-header">
            <h3 id="modalTitle">Report Status</h3>
            <span class="close">&times;</span>
        </div>
        <div class="modal-body">
            <p id="modalMessage"></p>
        </div>
        <div class="modal-footer">
            <button id="modalClose" class="btn btn-secondary">Close</button>
        </div>
    </div>
</div>

<%- include('partials/footer') %>
