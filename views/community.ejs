<%- include('partials/header', { title: 'Community', activeTab: 'community' }) %>

<!-- Community Section -->
<section class="community-section">
    <div class="container">
        <div class="page-header">
            <h1 class="page-title">Our Community</h1>
            <p class="page-subtitle">Connect with fellow players and stay updated</p>
        </div>

        <!-- Discord Section -->
        <div class="discord-section">
            <div class="discord-card">
                <div class="discord-header">
                    <i class="fab fa-discord"></i>
                    <h2>Join Our Discord</h2>
                </div>
                <p>Connect with over 500 members in our active Discord community!</p>
                <div class="discord-features">
                    <div class="discord-feature">
                        <i class="fas fa-comments"></i>
                        <span>General Chat</span>
                    </div>
                    <div class="discord-feature">
                        <i class="fas fa-gamepad"></i>
                        <span>Gaming Channels</span>
                    </div>
                    <div class="discord-feature">
                        <i class="fas fa-camera"></i>
                        <span>Screenshots</span>
                    </div>
                    <div class="discord-feature">
                        <i class="fas fa-headset"></i>
                        <span>Voice Chat</span>
                    </div>
                </div>
                <a href="#" class="btn btn-discord">
                    <i class="fab fa-discord"></i> Join Discord
                </a>
            </div>
        </div>

        <!-- Community Stats -->
        <div class="community-stats">
            <h2 class="section-title">Community Statistics</h2>
            <div class="stats-grid">
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-users"></i>
                    </div>
                    <div class="stat-number">500+</div>
                    <div class="stat-label">Discord Members</div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-server"></i>
                    </div>
                    <div class="stat-number">50-100</div>
                    <div class="stat-label">Daily Players</div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-calendar"></i>
                    </div>
                    <div class="stat-number">2+</div>
                    <div class="stat-label">Years Active</div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-trophy"></i>
                    </div>
                    <div class="stat-number">50+</div>
                    <div class="stat-label">Events Hosted</div>
                </div>
            </div>
        </div>

        <!-- Staff Team -->
        <div class="staff-section">
            <h2 class="section-title">Meet Our Staff</h2>
            <div class="staff-grid">
                <div class="staff-card">
                    <div class="staff-avatar">
                        <i class="fas fa-crown"></i>
                    </div>
                    <h3>Server Owner</h3>
                    <p class="staff-role">Owner</p>
                    <p>Founded TDL SMP and oversees all server operations</p>
                </div>
                <div class="staff-card">
                    <div class="staff-avatar">
                        <i class="fas fa-shield-alt"></i>
                    </div>
                    <h3>Admin Team</h3>
                    <p class="staff-role">Administrators</p>
                    <p>Handle major server decisions and player appeals</p>
                </div>
                <div class="staff-card">
                    <div class="staff-avatar">
                        <i class="fas fa-hammer"></i>
                    </div>
                    <h3>Moderators</h3>
                    <p class="staff-role">Moderators</p>
                    <p>Keep the peace and help players with daily issues</p>
                </div>
                <div class="staff-card">
                    <div class="staff-avatar">
                        <i class="fas fa-hands-helping"></i>
                    </div>
                    <h3>Helpers</h3>
                    <p class="staff-role">Community Helpers</p>
                    <p>Assist new players and answer questions</p>
                </div>
            </div>
        </div>

        <!-- Events & Activities -->
        <div class="events-section">
            <h2 class="section-title">Events & Activities</h2>
            <div class="events-grid">
                <div class="event-card">
                    <div class="event-icon">
                        <i class="fas fa-calendar-week"></i>
                    </div>
                    <h3>Weekly Events</h3>
                    <ul>
                        <li>Building Competitions</li>
                        <li>PvP Tournaments</li>
                        <li>Treasure Hunts</li>
                        <li>Community Projects</li>
                    </ul>
                </div>
                <div class="event-card">
                    <div class="event-icon">
                        <i class="fas fa-calendar-alt"></i>
                    </div>
                    <h3>Monthly Specials</h3>
                    <ul>
                        <li>Mega Build Contests</li>
                        <li>Server-wide Events</li>
                        <li>Holiday Celebrations</li>
                        <li>Community Meetings</li>
                    </ul>
                </div>
                <div class="event-card">
                    <div class="event-icon">
                        <i class="fas fa-gift"></i>
                    </div>
                    <h3>Rewards & Prizes</h3>
                    <ul>
                        <li>In-game Currency</li>
                        <li>Special Ranks</li>
                        <li>Custom Items</li>
                        <li>Discord Perks</li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Community Guidelines -->
        <div class="guidelines-section">
            <h2 class="section-title">Community Guidelines</h2>
            <div class="guidelines-grid">
                <div class="guideline-card">
                    <div class="guideline-icon">
                        <i class="fas fa-heart"></i>
                    </div>
                    <h3>Be Kind</h3>
                    <p>Treat everyone with respect and kindness. We're all here to have fun!</p>
                </div>
                <div class="guideline-card">
                    <div class="guideline-icon">
                        <i class="fas fa-hands-helping"></i>
                    </div>
                    <h3>Help Others</h3>
                    <p>Assist new players and share your knowledge with the community.</p>
                </div>
                <div class="guideline-card">
                    <div class="guideline-icon">
                        <i class="fas fa-comments"></i>
                    </div>
                    <h3>Stay Active</h3>
                    <p>Participate in discussions, events, and community activities.</p>
                </div>
                <div class="guideline-card">
                    <div class="guideline-icon">
                        <i class="fas fa-exclamation-triangle"></i>
                    </div>
                    <h3>Report Issues</h3>
                    <p>Help us maintain a safe environment by reporting problems to staff.</p>
                </div>
            </div>
        </div>

        <!-- Social Links -->
        <div class="social-section">
            <h2 class="section-title">Follow Us</h2>
            <div class="social-links-grid">
                <a href="#" class="social-card discord">
                    <i class="fab fa-discord"></i>
                    <h3>Discord</h3>
                    <p>Join our community server</p>
                </a>
                <a href="#" class="social-card youtube">
                    <i class="fab fa-youtube"></i>
                    <h3>YouTube</h3>
                    <p>Watch server highlights</p>
                </a>
                <a href="#" class="social-card twitter">
                    <i class="fab fa-twitter"></i>
                    <h3>Twitter</h3>
                    <p>Stay updated with news</p>
                </a>
                <a href="#" class="social-card instagram">
                    <i class="fab fa-instagram"></i>
                    <h3>Instagram</h3>
                    <p>See amazing screenshots</p>
                </a>
            </div>
        </div>
    </div>
</section>

<%- include('partials/footer') %>
