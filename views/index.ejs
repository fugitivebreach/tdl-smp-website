<%- include('partials/header', { title: 'Home', activeTab: 'home' }) %>

<!-- Hero Section -->
<section class="hero">
    <div class="hero-container">
        <div class="hero-content">
            <h1 class="hero-title">Welcome to <span class="highlight">TDL SMP</span></h1>
            <p class="hero-subtitle">Experience the ultimate Minecraft survival multiplayer server</p>
            <div class="hero-buttons">
                <a href="/appeal" class="btn btn-primary">
                    <i class="fas fa-rocket"></i> Join Now
                </a>
                <a href="/smp-info" class="btn btn-secondary">
                    <i class="fas fa-info-circle"></i> Learn More
                </a>
            </div>
        </div>
        <div class="hero-image">
            <div class="minecraft-blocks">
                <div class="block block-1"></div>
                <div class="block block-2"></div>
                <div class="block block-3"></div>
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section class="features">
    <div class="container">
        <h2 class="section-title">Why Choose TDL SMP?</h2>
        <div class="features-grid">
            <div class="feature-card">
                <div class="feature-icon">
                    <i class="fas fa-shield-alt"></i>
                </div>
                <h3>Safe & Secure</h3>
                <p>Protected by advanced anti-grief systems and active moderation</p>
            </div>
            <div class="feature-card">
                <div class="feature-icon">
                    <i class="fas fa-users"></i>
                </div>
                <h3>Amazing Community</h3>
                <p>Join a friendly, welcoming community of passionate Minecraft players</p>
            </div>
            <div class="feature-card">
                <div class="feature-icon">
                    <i class="fas fa-cogs"></i>
                </div>
                <h3>Custom Features</h3>
                <p>Unique plugins and features to enhance your gameplay experience</p>
            </div>
            <div class="feature-card">
                <div class="feature-icon">
                    <i class="fas fa-clock"></i>
                </div>
                <h3>24/7 Uptime</h3>
                <p>Reliable server hosting with minimal downtime and lag-free experience</p>
            </div>
        </div>
    </div>
</section>

<!-- Stats Section -->
<section class="stats">
    <div class="container">
        <div class="stats-grid">
            <div class="stat-item">
                <div class="stat-number">500+</div>
                <div class="stat-label">Active Players</div>
            </div>
            <div class="stat-item">
                <div class="stat-number">99.9%</div>
                <div class="stat-label">Uptime</div>
            </div>
            <div class="stat-item">
                <div class="stat-number">2+</div>
                <div class="stat-label">Years Running</div>
            </div>
            <div class="stat-item">
                <div class="stat-number">24/7</div>
                <div class="stat-label">Support</div>
            </div>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="cta">
    <div class="container">
        <div class="cta-content">
            <h2>Ready to Start Your Adventure?</h2>
            <p>Join thousands of players in the most exciting Minecraft SMP experience</p>
            <a href="/appeal" class="btn btn-primary btn-large">
                <i class="fas fa-play"></i> Apply to Join
            </a>
        </div>
    </div>
</section>

<%- include('partials/footer') %>
